<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para botones -->
    <style name="boton">
        <item name="android:textColor">@android:color/white</item><!-- Color blanco -->
        <item name="android:backgroundTint">#FF0000</item> <!-- Fondo negro -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>


    <style name="TextoTitulo">
        <item name="android:textColor">#000000</item> <!-- Negro -->
        <item name="android:textSize">24sp</item> <!-- Tamaño grande -->
        <item name="android:textStyle">bold</item> <!-- Negrita -->
        <item name="android:gravity">center</item> <!-- Centrado -->
        <item name="android:padding">8dp</item> <!-- Espaciado interno -->
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="TituloPersonaje">
        <item name="android:textColor">#7A3000</item> <!-- Naranja -->
        <item name="android:textSize">25sp</item> <!-- Tamaño grande -->
        <item name="android:textStyle">bold</item> <!-- Negrita -->
        <item name="android:gravity">left</item> <!-- Centrado -->
        <item name="android:padding">8dp</item> <!-- Espaciado interno -->
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="TextoDescripcion">
        <item name="android:textColor">#310A0A</item> <!-- Rojo oscuro -->
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item> <!-- Espaciado entre líneas -->
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="RecyclerViewStyle">
        <!-- Fondo del RecyclerView -->
        <item name="android:background">#DC0000</item>
        <item name= "android:layout_marginTop">100dp</item>
        <item name="android:padding">8dp</item>
        <!-- Elevación para sombra (efecto de tarjeta) -->
        <item name="android:elevation">4dp</item>
        <item name="android:clipToPadding">false</item>
    </style>


</resources>